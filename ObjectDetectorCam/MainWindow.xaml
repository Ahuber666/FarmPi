<Window x:Class="ObjectDetectorCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object Detector (Webcam + ONNX)" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" Background="#121212">
    <Grid>
        <!-- Video -->
        <Image x:Name="VideoImage" Stretch="Uniform" />

        <!-- Overlay for boxes & labels -->
        <Canvas x:Name="Canvas" IsHitTestVisible="False">
            <!-- we add/remove children dynamically each frame -->
        </Canvas>

        <!-- Status bar -->
        <DockPanel VerticalAlignment="Bottom" Background="#1E1E1E" Opacity="0.9" Height="36">
            <TextBlock x:Name="StatusText" Foreground="#DADADA" Margin="8,0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,8,0">
                <TextBlock Foreground="#9F9F9F" Margin="12,0,0,0" VerticalAlignment="Center" Text="ESC to exit"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
