<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.19.2" />
    <PackageReference Include="OpenCvSharp4" Version="4.9.0.20240107" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.9.0.20240107" />
    <PackageReference Include="OpenCvSharp4.WpfExtensions" Version="4.9.0.20240107" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.5" />
    <PackageReference Include="dotnetCampus.DirectShowLib" Version="1.0.0" />
  </ItemGroup>

  <!-- Copy model & labels to output -->
  <ItemGroup>
    <None Include="model\model.onnx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="model\labels.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
